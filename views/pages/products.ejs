<!DOCTYPE html>
<html>

<head>
  <title>Products</title>
  <% include ../partials/head %>
</head>

<body style="background: url(images/bakery-food-coffee-pastry-sweets-photo11.jpg)">
  <header>
    <% include ../partials/header %>
  </header>


  <!-- dispalying images -->
  <div class="container mt-4">


    <div class="row">
      <div class="card-deck">

        <% for(var i=0; i < rows.length; i++) { %>
        <div class="col-auto mb-4" style="min-width: 18rem; max-width: 18rem;">
          <div class="card">
            <img src="<%= rows[i].product_img%>" class="card-img-top">
            <div class="bottom-right"><button class="cart_btn btn-warning"><i class="fa fa-shopping-cart" onclick="settingCart();"></i></button>
            </div>
            <div style="display:none" id="product-id"><%= rows[i].product_id%></div>
            <button class="btn btn-warning text-white btn-lg" style="width:100%">
              <span id="name"><%= rows[i].product_name %></span>
              $
              <span id="price"><%= rows[i].price %></span>
            </button>
          </div>
        </div>

        <% } %>
      </div>
    </div>

  </div>


</body>

</html>